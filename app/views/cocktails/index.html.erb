<div class="banner">
  <div class="banner-content">
    <h1>FairyTails</h1>
    <p>Where drinking comes true</p>
    <%= link_to "Surprise me", cocktail_path(@random_cocktail), class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <h2>What are you drinking tonight?</h2>
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-md-3">
      <%= render 'shared/card', photo: c.photo, name: c.name, link: cocktail_path(c) %>
    </div>
    <% end %>
  </div>
</div>


