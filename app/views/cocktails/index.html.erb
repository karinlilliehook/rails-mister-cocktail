<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1505973600570-59521860b4f3?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f1f383869abf395577ae5bf5e6970d62&auto=format&fit=crop&w=2389&q=80');">
  <div class="banner-content">
    <h1>FairyTails</h1>
    <p>What are you drinking tonight?</p>
    <a class="btn btn-primary btn-lg">Surprise me</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-md-3">
      <%= render 'shared/card', name: c.name, link: cocktail_path(c) %>
    </div>
    <% end %>
  </div>
</div>


